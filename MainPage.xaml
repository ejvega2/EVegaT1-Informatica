<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoSemana1.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Label
                Text = "Programa para calcular el importe al IESS"
                TextColor="Blue"
                FontSize="Medium"
                HorizontalTextAlignment="Center">
            </Label>

                <Entry x:Name="txtNombre"
                   Placeholder="Ingrese su nombre: "
                       MaxLength="10"/>


            <Entry x:Name="txtApellido"
                   Placeholder="Ingrese su apellido: "
                       MaxLength="10"/>

            <Entry x:Name="txtEdad"
                        Placeholder="Ingrese su edad: "
                        MaxLength="2"
                        Keyboard="Numeric"/>

            <Entry x:Name="txtSalario"
                        Placeholder="Ingrese su salario: "
                        MaxLength="9000"
                        Keyboard="Numeric"/>

            <Button x:Name="btnSaludo"
                    Text="Calcular importe al IESS"
                    Clicked="btnSaludo_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
